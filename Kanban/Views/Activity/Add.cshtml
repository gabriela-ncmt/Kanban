@using Kanban.Dto

@model AddActivityDto

<div class="container mt-5">
    <form asp-action="Add" asp-controller="Activity" method="Post">
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="Title" /> 
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description"/>  
        </div>
        <div class="mb-3">
            <label class="form-label">Status</label>
            <select
                asp-for="StatusId" class="form-select"
                asp-items= "@(new SelectList(ViewBag.Status, "Id", "Name"))"    
            >

            </select>

        </div>

        <div class="d-flex">
            <button type="submit" class="btn-primary w-50">Add</button>
            <a class="btn btn-info w-50 mx-2" asp-action="Index" asp-controller="Activity">Back</a>
        </div>
    </form>

</div>